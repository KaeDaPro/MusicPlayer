<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="android.juntillak.musicplayer.MusicPlayer">

    <TextView
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="\u266b Sweet Music Player \u266b"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view1"
        android:layout_centerHorizontal="true"
        android:text="View 2"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/view3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view2"
        android:layout_centerHorizontal="true"
        android:text="SubHeading"
        android:textSize="36sp" />


    <TextView
        android:id="@+id/view4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="View 4"
        android:textSize="36sp"/>

    <TextView
        android:id="@+id/view5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/view4"
        android:layout_alignTop="@+id/view4"
        android:background="#ddd"
        android:text="View 5"
        android:textSize="36sp"/>

    <TextView
        android:id="@+id/view6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view4"
        android:layout_alignLeft="@id/view4"
        android:background="#ddd"
        android:text="View 6"
        android:textSize="36sp"/>

    <TextView
        android:id="@+id/view7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:background="#ddd"
        android:text="View 7"
        android:textSize="36sp"/>

    <Button
        android:onClick="StopSong"
        android:id="@+id/view8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/view10"
        android:layout_alignParentBottom="true"
        android:background="#ddd"
        android:text="\u220e"
        android:textSize="36sp"/>

    <Button
        android:onClick="playSong"
        android:id="@+id/view9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/view4"
        android:layout_alignParentBottom="true"
        android:background="#ddd"
        android:text="\u25BA"
        android:textSize="36sp"/>

    <Button
        android:onClick="pauseSong"
        android:id="@+id/view10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/view9"
        android:layout_alignParentBottom="true"
        android:background="#ddd"
        android:text="||"
        android:textSize="36sp"/>

    <Button
        android:onClick="RewindSong"
        android:id="@+id/view11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/view8"
        android:layout_alignParentBottom="true"
        android:background="#ddd"
        android:text="\u226a"
        android:textSize="36sp"/>

    <Button
        android:onClick="ForwardSong"
        android:id="@+id/view12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/view9"
        android:layout_alignParentBottom="true"
        android:background="#ddd"
        android:text="\u226b"
        android:textSize="36sp"/>

    <TextView
        android:id="@+id/currentTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 min 0 sec"
        android:layout_alignLeft="@+id/view11"
        android:layout_above="@+id/view12"
        android:textSize="35sp"/>

    <TextView
        android:id="@+id/finalTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 min 0 sec"
        android:layout_alignRight="@+id/view12"
        android:layout_above="@+id/view12"
        android:textSize="35sp"/>

</RelativeLayout>
